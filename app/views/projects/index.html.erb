<section class="page-section">
  <h1>Projects</h1>
  <table class="index-table">
    <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @projects.each do |project| %>
      <tr>
        <th scope="row"><%= link_to project.name, project, class: 'navigation' %></th>
        <td><%= project.description %></td>
        <td><%= link_to 'Delete', project, method: :delete, class: 'delete', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= link_to(new_project_path, class: 'navigation')  do %>
    <%= fa_icon 'plus' %>
    Add New Project
  <% end %>
</section>
