<div class="site-wrapper project-view">
  <main>
    <header>
      <h1 class="heading"><%= @project.name %></h1>
    </header>
    <%= yield %>
  </main>
  <section class="status-sidebar">
    <img class="project-image" src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/39377/cacaponriver.jpg' alt=''>
    <ol class="list-reset status-key">
      <li class="completed">
        <%= link_to(project_targets_url(@project)) do %>
          <span>Capture</span> <em class="has-sidelines">Targets</em>
        <% end %>
      </li>
      <li class="completed"><a href=""><span>Describe</span> <em class="has-sidelines">Target Health</em></a></li>
      <li class="current"><a href=""><span>Identify</span> <em class="has-sidelines">Threats</em></a></li>
      <li><a href=""><span>Develop</span> <em class="has-sidelines">Strategies</em></a></li>
      <li><a href=""><span>Complete</span> <em class="has-sidelines">Assessment</em></a></li>
    </ol>
  </section>
</div>