<section class="login-section">
  <img class="logo" alt="turboCAP" src=<%= asset_path('turbocap-logo.png') %>/>
  <h2 class="login-heading">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <%= f.label :email, class: 'form-label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-field' %>

    <%= f.label :password, class: 'form-label' %>
    <%= f.password_field :password, autocomplete: "off", class: 'form-field' %>

    <% if devise_mapping.rememberable? -%>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    <% end -%>

    <div class="form-footer">
      <%= f.submit "Log in", class: 'login-button' %>
    </div>

  <% end %>
  <%= render "devise/shared/links" %>
</section>
