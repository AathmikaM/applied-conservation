<section class="page-section">
  <header class="page-header">
    <h2 class="heading page-heading"><%= @target.name %></h2>
    <%= link_to('Edit', edit_target_path(@target), class: 'navigation') %>
  </header>
  <section class="health-attributes">
    <h3>Health Attributes</h3>
    <table class="index-table" >
      <thead>
        <tr>
          <th>Name</th>
          <th>Rating</th>
        </tr>
      </thead>
      <tbody>
        <% @target.health_assessments.each do |health_assessment| %>
          <tr>
            <th><%= link_to health_assessment.name, health_assessment_path(health_assessment) %></th>
            <th>
              <%= best_in_place health_assessment, :rating, as: :select,
                                place_holder: "click me to edit",
                                class: 'button-secondary',
                                collection: {"good" => "Good", "bad" => "Bad"},
                                url: health_assessment_path(health_assessment) %>
            </th>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="form-footer">
      <%= link_to(new_target_health_assessment_path(@target.id), class: 'navigation') do %>
        <%= fa_icon 'plus' %>
        Add Health Attribute
      <% end %>
    </div>
  </section>
</section>
