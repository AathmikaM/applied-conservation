<%= form_for [@project, @task] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :due_on %>
  <%= f.date_field :due_on %>
  <%= f.label :user %> 
  <%= f.collection_select :user_id, User.all, :id, :email, {include_blank: ""} %>
  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit "Add Task" %>
<% end %>